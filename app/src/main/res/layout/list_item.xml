<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/article_title"
            style="@style/article_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Latest News Feed On Political Issues." />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/article_author"
                style="@style/article_author"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:text="Writer McGee" />

            <TextView
                android:id="@+id/article_section"
                style="@style/article_section"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:text="The Coolest Section" />

        </LinearLayout>

        <TextView
            android:id="@+id/article_date"
            style="@style/article_date"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            tools:text="July 28th, 2018" />

        <TextView
            android:id="@+id/article_url"
            style="@style/article_url"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="www.theguardian.com" />

    </LinearLayout>

</LinearLayout>